{
	"name": "calml",
	"displayName": "CALML",
	"description": "Chords and Lyrics Markup Language",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:calml.openAsHtml",
		"onCommand:calml.saveHtml",
		"onCommand:calml.savePdf",
		"onLanguage:calml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
		  {
			"id": "CALML",
			"extensions": [".calml"]
		  }
		],
		"grammars": [
		  {
			"language": "CALML",
			"scopeName": "source.calml",
			"path": "./syntaxes/calml.tmGrammar.json"
		  }
		],
		"commands": [
			{
				"command": "calml.openAsHtml",
				"title": "CALML: Create HTML",
				"group": "CALML"
			},
			{
				"command": "calml.saveHtml",
				"title": "CALML: Save to HTML",
				"group": "CALML"
			},
			{
				"command": "calml.savePdf",
				"title": "CALML: Save to PDF",
				"group": "CALML"
			}
		],
		"configuration": {
			"type": "object",
			"title": "calml",
			"properties": {
				"calml.stylesheet": {
					"type": "string",
					"default": "",
					"description": "Custom css style."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"puppeteer": "^2.1.1",
		"puppeteer-core": "^2.1.1"
	}
}
